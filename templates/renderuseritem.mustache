<div class="ipr-user-item" data-id="{{ id }}">
    <div class="row">
        <div class="col-sm-8">
            <div id='ipr-user-id-{{ id }}'><strong>ID:</strong> {{ id }} </div>
            <div id='ipr-user-username-{{ id }}'><strong>Логин:</strong> {{ username }} </div>
            <div id='ipr-user-fullname-{{ id }}'><strong>ФИО:</strong> {{ fullname }} </div>
            <div id='ipr-user-email-{{ id }}'><strong>Email:</strong> {{ email }} </div>
            <div id='ipr-user-blocked-{{ id }}'><strong>Заблокирован:</strong> {{ blocked }} </div>
            <div id='ipr-user-user_type-{{ id }}'><strong>Тип пользователя:</strong> {{ user_type }} </div>
            <div id='ipr-user-class-{{ id }}'><strong>Класс:</strong> {{ class }} </div>
            <div id='ipr-user-specialty-{{ id }}'><strong>Специальность:</strong> {{ specialty }} </div>
            <div id='ipr-user-group-{{ id }}'><strong>Группа:</strong> {{ group }} </div>
            <div id='ipr-user-facultet-{{ id }}'><strong>Факультет:</strong> {{ facultet }} </div>
            <div id='ipr-user-department-{{ id }}'><strong>Отдел:</strong> {{ department }} </div>
            <div id='ipr-user-registration_date-{{ id }}'><strong>Дата регистрации:</strong> {{ registration_date }}
            </div>
            <div id='ipr-user-blockedafter-{{ id }}'><strong>Дата окончания подписки:</strong> {{ blockedafter }} </div>
        </div>
        <div class="col-sm-1">


            {{#block}}
                <a style="" class="btn btn-secondary ipr-user-block" data-id="{{id}}" href="#block">Заблокировать</a>
            {{/block}}
            {{#unblock}}
                <a style="" class="btn btn-secondary ipr-user-unblock" data-id="{{id}}" href="#unblock">Восстановить</a>
            {{/unblock}}

        </div>
    </div>
</div>
